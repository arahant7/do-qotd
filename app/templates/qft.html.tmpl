<!-- ONE QUESTION -->
<div class="grid-100 do-content-box" id="div_question_{{qft.question_id}}">
  <div class="grid-5 mobile-grid-10 grid-parent up-down-vote">
    <div class="grid-100 grid-parent triangle-base triangle-up">
        <input type="hidden" name="url" value="/questions/{{qft.question_id}}/updownvote/1"/>
        <input type="hidden" name="color" value="#7CEB98"/>
    </div>
    <span class="updownvote-value">{{ qft.net_vote }}</span>
    <div class="grid-100 grid-parent triangle-base triangle-down">
        <input type="hidden" name="url" value="/questions/{{qft.question_id}}/updownvote/-1"/>
        <input type="hidden" name="color" value="#FF7373"/>
    </div> 
  </div>
  <div class="grid-95 mobile-grid-90 grid-parent">
    <div class="do-margin-reference">
      <span class="do-font-reference">{{ qft.question|e }}</span>
    </div>
  </div>
</div>
<div class="do-item-clear">&nbsp;</div>

